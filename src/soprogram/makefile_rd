#variables
PROG=frd.o
PROGBIN = rd.elf
PATH = ../library/includes
LIBRARY = ../library/library.lib system.lib

LD=C:\gcc\bin\ld
LDFLAG= -T linker.ld
SC=C:\gcc\bin\g++
FLAG= -ffreestanding -nostdlib -nostdinc -I $(PATH)  -I uses
OBJDUMP=objdump
OBJCOPY = objcopy
OBJCOPYFLAG = -O elf32-i386


OBJ := rd.o $(LIBRARY)
	
ensamblar : $(PROG)

$(PROG):$(OBJ)
	 $(LD) $(LDFLAG) -o $@ $^

%.o: %.cc
	 $(SC) $(FLAG) -c $< -o  $@

%.o: %.asm
	 $(ASM) $(ASMFLAG) $< -o  $@
	
cpybinarioELF:
	$(OBJCOPY) $(OBJCOPYFLAG) $(PROG) $(PROGBIN)

showobj:
	$(OBJDUMP) -D $(PROG)